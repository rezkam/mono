# Mono Service - Production Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# PostgreSQL Configuration (required)
POSTGRES_USER=mono
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=mono_db

# Server Configuration (optional - defaults shown)
SERVER_PORT=80
MONO_DB_MAX_OPEN_CONNS=25
MONO_DB_MAX_IDLE_CONNS=10

# Migrations (optional)
# MONO_DB_AUTO_MIGRATE=true  # Enable auto-migrations on startup (default: false)

# TLS/HTTPS (optional)
# For local dev, generate certs with: mkcert localhost 127.0.0.1 ::1
# MONO_TLS_ENABLED=true
# MONO_TLS_CERT_FILE=./localhost+2.pem      # Local dev
# MONO_TLS_KEY_FILE=./localhost+2-key.pem   # Local dev
# For Docker, certs are mounted to /certs/ (see docker-compose.prod.yml)

# OpenTelemetry (optional)
# MONO_OTEL_ENABLED=true
# OTEL_SERVICE_NAME=mono-service
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
