# Mono Service - Production Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# PostgreSQL Configuration (required)
POSTGRES_USER=mono
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=mono_db

# Server Configuration (optional - defaults shown)
SERVER_PORT=80
MONO_DB_MAX_OPEN_CONNS=25
MONO_DB_MAX_IDLE_CONNS=10

# Migrations (optional)
# MONO_DB_AUTO_MIGRATE=true  # Enable auto-migrations on startup (default: false)

# TLS/HTTPS (optional)
# For local dev, generate certs with: mkcert localhost 127.0.0.1 ::1
# MONO_TLS_ENABLED=true
#
# Host paths (where cert files are located on your machine):
# MONO_TLS_CERT_FILE_HOST=./cert.pem              # Default (change to your cert path)
# MONO_TLS_KEY_FILE_HOST=./key.pem                # Default (change to your key path)
# For local dev with mkcert:
# MONO_TLS_CERT_FILE_HOST=./localhost+2.pem
# MONO_TLS_KEY_FILE_HOST=./localhost+2-key.pem
# For production (e.g., Let's Encrypt on Ubuntu):
# MONO_TLS_CERT_FILE_HOST=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
# MONO_TLS_KEY_FILE_HOST=/etc/letsencrypt/live/yourdomain.com/privkey.pem
#
# Container paths (inside Docker, usually no need to change):
# MONO_TLS_CERT_FILE=/certs/cert.pem
# MONO_TLS_KEY_FILE=/certs/key.pem

# OpenTelemetry (optional)
# MONO_OTEL_ENABLED=true
# OTEL_SERVICE_NAME=mono-service
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
