    "v1RecurrencePattern": {
      "type": "string",
      "enum": [
        "RECURRENCE_PATTERN_UNSPECIFIED",
        "RECURRENCE_PATTERN_DAILY",
        "RECURRENCE_PATTERN_WEEKLY",
        "RECURRENCE_PATTERN_BIWEEKLY",
        "RECURRENCE_PATTERN_MONTHLY",
        "RECURRENCE_PATTERN_YEARLY",
        "RECURRENCE_PATTERN_QUARTERLY",
        "RECURRENCE_PATTERN_WEEKDAYS"
      ],
      "default": "RECURRENCE_PATTERN_UNSPECIFIED",
      "description": "- RECURRENCE_PATTERN_UNSPECIFIED: Default value, not set\n - RECURRENCE_PATTERN_DAILY: Every day\n - RECURRENCE_PATTERN_WEEKLY: Every week\n - RECURRENCE_PATTERN_BIWEEKLY: Every 2 weeks\n - RECURRENCE_PATTERN_MONTHLY: Every month\n - RECURRENCE_PATTERN_YEARLY: Every year\n - RECURRENCE_PATTERN_QUARTERLY: Every 3 months\n - RECURRENCE_PATTERN_WEEKDAYS: Monday through Friday",
      "title": "RecurrencePattern defines how often a recurring task should repeat.\nValid values:\n - RECURRENCE_PATTERN_DAILY: Repeats every day\n - RECURRENCE_PATTERN_WEEKLY: Repeats every week on the same day\n - RECURRENCE_PATTERN_BIWEEKLY: Repeats every two weeks\n - RECURRENCE_PATTERN_MONTHLY: Repeats on the same day each month\n - RECURRENCE_PATTERN_YEARLY: Repeats once per year\n - RECURRENCE_PATTERN_QUARTERLY: Repeats every 3 months\n - RECURRENCE_PATTERN_WEEKDAYS: Repeats on weekdays only (Monday-Friday)"
    },
