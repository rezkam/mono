    "v1TaskPriority": {
      "type": "string",
      "enum": [
        "TASK_PRIORITY_UNSPECIFIED",
        "TASK_PRIORITY_LOW",
        "TASK_PRIORITY_MEDIUM",
        "TASK_PRIORITY_HIGH",
        "TASK_PRIORITY_URGENT"
      ],
      "default": "TASK_PRIORITY_UNSPECIFIED",
      "description": "- TASK_PRIORITY_UNSPECIFIED: Default value, not set\n - TASK_PRIORITY_LOW: Low priority\n - TASK_PRIORITY_MEDIUM: Medium priority (recommended default)\n - TASK_PRIORITY_HIGH: High priority\n - TASK_PRIORITY_URGENT: Urgent, needs immediate attention",
      "title": "TaskPriority indicates the importance and urgency of a task.\nValid values:\n - TASK_PRIORITY_LOW: Nice to have, low urgency\n - TASK_PRIORITY_MEDIUM: Standard priority, default for most tasks\n - TASK_PRIORITY_HIGH: Important, should be done soon\n - TASK_PRIORITY_URGENT: Critical, requires immediate attention"
    },
    "v1TaskStatus": {
      "type": "string",
      "enum": [
        "TASK_STATUS_UNSPECIFIED",
        "TASK_STATUS_TODO",
        "TASK_STATUS_IN_PROGRESS",
        "TASK_STATUS_BLOCKED",
        "TASK_STATUS_DONE",
        "TASK_STATUS_ARCHIVED",
        "TASK_STATUS_CANCELLED"
      ],
      "default": "TASK_STATUS_UNSPECIFIED",
      "description": "- TASK_STATUS_UNSPECIFIED: Default value, not set\n - TASK_STATUS_TODO: Ready to start\n - TASK_STATUS_IN_PROGRESS: Currently being worked on\n - TASK_STATUS_BLOCKED: Blocked by dependencies\n - TASK_STATUS_DONE: Completed successfully\n - TASK_STATUS_ARCHIVED: Archived for records\n - TASK_STATUS_CANCELLED: Cancelled, won't complete",
      "title": "TaskStatus represents the current state of a task.\nValid values:\n - TASK_STATUS_TODO: Task is ready to be worked on\n - TASK_STATUS_IN_PROGRESS: Task is actively being worked on\n - TASK_STATUS_BLOCKED: Task is blocked by external dependencies\n - TASK_STATUS_DONE: Task is completed\n - TASK_STATUS_ARCHIVED: Task is archived for record keeping\n - TASK_STATUS_CANCELLED: Task was cancelled and won't be completed"
    },
